<!DOCTYPE html>
<html lang="en" class="h-100">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <title>Emo Track</title>

        <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/cover/">
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        
        <!-- Custom styles for this template -->
        <link rel="stylesheet" type="text/css" href="/css/index.css">

    </head>

    <body class="d-flex text-center text-white emo-bg">
        <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">

            <%-  include('topbar.ejs') %>
            <main class="px-3">
                <container>


                    <% const dateformat = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }; %>

                    <% defaultTriggers.forEach((row) => { %>
                            <% row.default_trigger_name %>
                    <% }); %> 

                    <% for (let row of snapshot) { %>
                        <% if (row) { %>
                            <% var snapshotid = row.emotional_snapshot_id; %>

                            <% var snapshotdate = row.created_ts; %>
                            <% if (snapshotdate) { %>
                                <% var inputdate = new Date(snapshotdate); %>
                                <% const year = inputdate.getFullYear(); %>
                                <% const month = (inputdate.getMonth() + 1).toString().padStart(2, "0"); %>
                                <% const day = inputdate.getDate().toString().padStart(2, "0"); %>
                                <% formattedDate = `${day}-${month}-${year}`; %>
                            <% } %>
                
                            <% if (row.enjoyment_level) { %>
                                <% var snapshotenjoyment = row.enjoyment_level ; %>
                            <% } %>

                            <% if (row.sadness_level) { %>
                                <% var snapshotsadness = row.sadness_level; %>
                            <% } %>

                            <% if (row.anger_level) { %>
                                <% var snapshotanger = row.anger_level; %>
                            <% } %>

                            <% if (row.contempt_level) { %>
                                <% var snapshotcontempt = row.contempt_level; %>
                            <% } %>

                            <% if (row.disgust_level) { %>
                                <% var snapshotdisgust = row.disgust_level; %>
                            <% } %>

                            <% if (row.fear_level) { %>
                                <% var snapshotfear = row.fear_level; %>
                            <% } %>

                            <% if (row.surprise_level) { %>
                                <% var snapshotsurprise = row.surprise_level; %>
                            <% } %>

                            <% if (row.notes) { %>
                                <% var snapshotnotes = row.notes; %>
                            <% } %>

                            <% if (row.modified_ts) { %>
                                <% var snapshotupdatedate = row.modified_ts; %>
                                    <% if (snapshotupdatedate) { %>
                                    <% var inputupdatedate = new Date(snapshotupdatedate); %>
                                    <% const updateyear = inputupdatedate.getFullYear(); %>
                                    <% const updatemonth = (inputupdatedate.getMonth() + 1).toString().padStart(2, "0"); %>
                                    <% const updateday = inputupdatedate.getDate().toString().padStart(2, "0"); %>
                                    <% var formattedupdateDate = `${updateday}-${updatemonth}-${updateyear}`; %>
                                <% } %>
                            <% } %>

                    <div class="uk-section uk-background-muted">
                        <div class="snapshot">

                            <form method="post" action="/user/<%= userid%>/edit/<%= snapshotid %>" class="form-horizontal">
                        
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-floating mb-4 mt-4">
                                            <input type="text" class="form-control" id="snapshot_date" name="snapshot_date" value="<%= formattedDate %>" readonly>
                                            <label for="snapshot_date" class="form-label">Date Snapshot Created:</label> 
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-floating mb-4 mt-4">
                                            <input type="text" class="form-control" id="snapshot_update_date" name="snapshot_update_date" value="<%= formattedupdateDate %>" readonly>
                                            <label for="snapshot_update_date" class="form-label">Last Updated:</label> 
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                <div class="col-sm-6 col">
                                <div class="form-group">
                                <div class="uk-width-1-6@s">Enjoyment Level
                                    <input min="1" max="7"  class="uk-input" name="snapshot_enjoyment" type="range" value="<%= snapshotenjoyment %>" disabled >
                                </div>
                                <div class="uk-width-1-6@s">Sadness Level
                                    <input min="1" max="7"  class="uk-input" name="snapshot_sadness" type="range" value="<%= snapshotsadness %>" disabled>
                                </div>
                                <div class="uk-width-1-6@s">Anger Level
                                    <input min="1" max="7" class="uk-input" name="snapshot_anger" type="range" value="<%= snapshotanger %>" disabled>
                                </div>
                                <div class="uk-width-1-6@s">Contempt Level
                                    <input min="1" max="7" class="uk-input" name="snapshot_contempt" type="range" value="<%= snapshotcontempt %>"  disabled>
                                </div>
                                <div class="uk-width-1-6@s">Disgust Level
                                    <input min="1" max="7" class="uk-input" name="snapshot_disgust" type="range" value="<%= snapshotdisgust %>"  disabled>
                                </div>
                                <div class="uk-width-1-6@s">Fear Level
                                    <input min="1" max="7"  name="snapshot_fear" type="range" value="<%= snapshotfear %>" disabled>
                                </div>
                                <div class="uk-width-1-6@s">Surprise Level
                                    <input  min="1" max="7" class="uk-input" name="snapshot_surprise" type="range" value="<%= snapshotsurprise %>" disabled>
                                </div>
                                </div>
                                </div>
                                <div class="col-sm-6 col">
                                <div class="row">
                                   
                                        
                                            <div class="form-label">Emotional Triggers (select all that apply):
                                            </div>
                                                <div class="list-group">
                                                    <% let col = 0 %>
                                                    <% for (let trigger of defaultTriggers) { %>
                                                        <% if (col % 2 == 0) { %>
                                                            <div class="row">
                                                        <% }%>
                                                        <div class="col">       

                                                        <label class="">
                                                            <input  class="form-check-input me-1" type="checkbox"  id="trigger_<%= trigger.default_trigger_id %>" value="<%= trigger.default_trigger_id %>" <% if (row.default_trigger_ids && row.default_trigger_ids.includes(trigger.default_trigger_id)) { %>checked<% } %> >
                                                            <%= trigger.default_trigger_name %>
                                                        </label>
                                                        </div>
                                                         <% col++ %>
                                                        <% if (col % 2 == 0) { %>
                                                           </div>
                                                        <% }%>
                                                       
                                                    <% }%>

                                         
                                   
                                    </div>
                                </div>
                                </div>
</div>

                                <div class="form-floating mb-3 mt-3">
                                    <input type="text" class="form-control" id="snapshot_notes" name="snapshot_notes" value="<%= snapshotnotes %>" readonly>
                                    <label for="snapshot_notes" class="form-label">Notes:</label> 
                                </div>

                                    
                                    <% } %>
                                    <% } %> 


                                        <div class="uk-width-auto">
                                            <div uk-form-custom>
                                                <button id="updateButton" class="uk-button uk-button-secondary uk-button-large">Update</button>
                                            </div>
                                            <div uk-form-custom>
                                                //TODO Add an on onclick confirmation?
                                                <div uk-form-custom>
                                                    <button class="uk-button uk-button-danger uk-button-large" formaction="/user/<%= userid %>/del/<%= snapshotid %>">Delete</button>
                                                </div>
                                            
                                            </div>
                                        </div>

                            </form>
                        </div>
                    </div>
                </container>
            </main>

            <%-  include('footer.ejs') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        </div>
    </body>
</html>
